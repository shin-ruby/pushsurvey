    <div class="span-3">
        <div class="button">
            <%= link_to "Create Push", new_push_path %>
        </div>
    </div>
	<br />
    <br />
    <br />
    <hr />
	<div id="container">		
		<div id="demo">
            <table cellpadding="0" cellspacing="0" border="0" class="display" id="datagrid">
                <thead>
                    <tr>
                        <th>Push Title</th>
                        <th>Date Push</th>
                        <th>Design</th>
                        <th>Feedback</th>
                        <th>Status</th>
                        <th>Folder</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% @pushes.each do |push| %>
                    <tr class="gradeX">
                        <td><%= link_to push.name, push %></td>
                        <td><%= push.date_push_presenter %></td>
                        <td><%= link_to image_tag("design.png"), push.design %></td>
                        <td class="center"><%= push.feedback_presenter %></td>
                        <td class="center"><%= push.status %></td>
                        <td class="center"><%= push.folder_id %></td>
                        <td class="center"><%= link_to "Save", save_push_path(push) %>|<%= link_to 'Delete', push, :confirm => 'Are you sure?', :method => :delete %></td>
                    </tr>
                    <% end %>
                </tbody>
                <tfoot>
                    <tr>
                        <th>Push Title</th>
                        <th>Date Push</th>
                        <th>Design</th>
                        <th>Feedback</th>
                        <th>Status</th>
                        <th>Folder</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="spacer"></div>		
      </div>


