	<br /><br />
	<div class="span-24">
        <%= form_for @push do |f|%>
		<legend><h4>Push Name:<%= @push.name %></h4></legend>
        <fieldset> 
            <div class="span-24">
                <h6>Category&nbsp;&nbsp;&nbsp;&nbsp;<%= f.select "category_id",options_from_collection_for_select(Category.all, :id, :name) %></h6>
                <h6>Folder Management&nbsp;&nbsp;&nbsp;&nbsp;<%= f.select "folder_id",options_from_collection_for_select(Folder.all, :id, :name) %></h6>
                <h6>Comment</h6>
                <%= f.text_area "comment" %>
                <br />
                <br />

                <h6>Email Subject&nbsp;&nbsp;&nbsp;&nbsp;<%= f.text_field :subject %></h6>
                <h6>From Email&nbsp;&nbsp;&nbsp;&nbsp;<%= f.text_field "from_email" %></h6>
                <h6>Reply-To Email&nbsp;&nbsp;&nbsp;&nbsp;<%= f.text_field "reply_to_email" %></h6>
                <h6>Signature</h6>
                <%= f.text_area "signature" %><br />
            	<%= f.submit "Save" %>
            </div>
            <%= render "address_book" %>

        </fieldset>
        <%end %>
      </div>

