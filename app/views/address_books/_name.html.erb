<div class="span-12">
  <%= form_for(@address_book) do |f| %>
      <% if @address_book.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@address_book.errors.count, "error") %> prohibited this address_book from being
              saved:</h2>

            <ul>
              <% @address_book.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <fieldset>
        <legend><h4>Add New List</h4></legend>
        <br/>

        <div class="field">
          <p><%= f.label :name, "Create address name" %></p>

          <p><%= f.text_field :name %></p>
        </div>
        <hr/>
        <div class="actions">
          <%= f.submit %>
        </div>
      </fieldset>
  <% end %>
</div>
<div class="span-12 last">
  <fieldset>
    <legend><h4>Note</h4></legend>
    <ul id="contenta">
      <li class="conFocus">
        Create a new Address Book and give it a unique name. <br/><br/>
        Please pay attention that the maximum data storage of every Address Book is 30,000 which can be up to 100,000 in
        the next upgrade.
      </li>
    </ul>
  </fieldset>
</div>